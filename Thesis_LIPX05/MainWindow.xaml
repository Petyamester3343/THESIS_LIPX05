<Window x:Class="Thesis_LIPX05.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Thesis_LIPX05"
        mc:Ignorable="d"
        Title="Y0KAI Task Scheduler"
        Width="1366"
        Height="768"
        Closing="MainWindow_Closing"
>
    <Window.Resources>
        <Style TargetType="ToolTip">
            <Setter Property="MaxWidth" Value="300"/>
            <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="LightYellow"/>
        </Style>
    </Window.Resources>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open BatchML File" Tag="Open file" Click="OpenFile_Click" />
                <MenuItem Header="_Save BatchML File" Tag="Save file" Click="SaveFile_Click"/>
                <MenuItem Header="_Close BatchML File" Tag="Close file" Click="CloseFile_Click"/>
                <Separator/>
                <MenuItem Header="_Export current canvas" Click="ExportCanvas_Click"/>
                <Separator/>
                <MenuItem Header="_Exit" Click="Exit_Click" Tag="Exit"/>
            </MenuItem>
            <MenuItem Header="_Solver" Name="SolverMenu">
            </MenuItem>
            <MenuItem Header="_Graph">
                <MenuItem Header="_Draw S-Graph" Click="DrawGraph_Click"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <TabControl Name="MainTab">
            <TabItem Header="_Gantt chart" Tag="Gantt">
                <Grid>
                    <DockPanel>
                        <Slider Name="ZoomSlider" Minimum="-2" Maximum="2" Value="0" TickFrequency="0.1"
                            IsSnapToTickEnabled="False" Width="1000" HorizontalAlignment="Center"
                            DockPanel.Dock="Top" PreviewMouseDown="ZoomSlider_PreviewMouseDown"
                            ValueChanged="ZoomSlider_ValueChanged"/>
                        <ScrollViewer Name ="GanttScrollViewer" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                            <StackPanel Orientation="Vertical">
                                <Canvas Name="RulerCanvas" Height="30" Background="White"/>
                                <Canvas Name="GanttCanvas" Height="Auto" Background="Transparent" Tag=""/>
                            </StackPanel>
                        </ScrollViewer>
                    </DockPanel>
                    <Button Name="ShowSolutionTableBtn" Content="Create Solution Table" Width="160" Height="40" Margin="1154,615,0,0" Click="CreateSolutionTableBtn_Click" FontWeight="Bold"/>
                </Grid>
            </TabItem>
            <TabItem Header="_S-Graph" Tag="SGraph">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <Canvas Name="SGraphCanvas" Background="White"/>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
