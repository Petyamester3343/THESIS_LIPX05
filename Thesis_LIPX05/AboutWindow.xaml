<Window x:Class="Thesis_LIPX05.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Thesis_LIPX05"
        mc:Ignorable="d"
        Title="AboutWindow" Height="500" Width="500">
    <DockPanel>
        <TextBlock Text="Y0KAI Task Scheduler" FontSize="24" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0 200 0 20" TextAlignment="Center"/>
        <TextBlock Text="Version 1.0" FontSize="18" Foreground="Black" HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0 0 0 0" TextAlignment="Center"/>
        <TextBlock Text="Developed by: Tóth Péter (LIPX05)" FontSize="18" Foreground="Black" HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0 0 0 0" TextAlignment="Center"/>
        <Button Content="Close" DockPanel.Dock="Top" Margin="0 0 0 0" FontWeight="Bold" Click="Close_Click" Width="100" Height="40"/>
    </DockPanel>
</Window>
